{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "cleanUrls": true,
  "buildCommand": "pnpm run build && rm -f dist/client/index.html",
  "outputDirectory": "dist/client",
  "functions": {
    "api/handler.js": {
      "includeFiles": "dist/server/**"
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/github",
      "destination": "https://github.com/Ripple-TS/ripple",
      "permanent": false
    },
    {
      "source": "/docs",
      "destination": "/docs/introduction",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/assets/:path*",
      "destination": "/assets/:path*"
    },
    {
      "source": "/:path*.:ext(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|webp|avif|json|txt|xml|webmanifest|map)",
      "destination": "/:path*.:ext"
    },
    {
      "source": "/(.*)",
      "destination": "/api/handler"
    }
  ]
}
